<Window x:Class="WPF_Asssignment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Asssignment"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="525" ResizeMode="NoResize">
    <Grid>
        <Label x:Name="userName" Content="UserName" HorizontalAlignment="Left" Margin="153,94,0,0" VerticalAlignment="Top"/>
        <Label x:Name="password" Content="Password" HorizontalAlignment="Left"  Margin="153,133,0,0" VerticalAlignment="Top"/>
        <Button x:Name="submit" Content="SignIn" HorizontalAlignment="Left" Margin="228,200,0,0" VerticalAlignment="Top" Width="75" Click="submit_Click"/>
        <TextBox x:Name="userNameTextBox" HorizontalAlignment="Left" Height="23" Margin="271,94,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="passwordTextBox" HorizontalAlignment="Left" Height="18" Margin="271,141,0,0" PasswordChar="*" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
